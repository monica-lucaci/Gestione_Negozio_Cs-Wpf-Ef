<Window x:Class="wpf_GestioneNegozio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_GestioneNegozio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel>
           
            <Button x:Name="GestioneCategorie" Click="GestioneCategorie_Click">Gestisci le Categorie</Button>
            <Button x:Name="GestioneProdotto" Click="GestioneProdotto_Click">Gestisci i Prodotii</Button>
            <Button x:Name="GestioneVariazione" Click="GestioneVariazione_Click">Gestisci le Variazioni</Button>
            <Button x:Name="GestioneUtente" Click="GestioneUtente_Click" >Gestisci Utente</Button>
            <Button x:Name="GestioneOrdine" Click="GestioneOrdine_Click" >Gestisci Ordine</Button>



        </StackPanel>
        
    
    </DockPanel>
  
</Window>
    
